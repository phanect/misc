{
  "extends": "@phanect/configs/ts",
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
    "jsx": "react-jsx",
    "plugins": [{
      "name": "next"
    }],
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
